<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wuziqi.love.fantasy.faith.Chessboard
            android:id="@+id/snake"
            tileSize="24"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView5"
            android:layout_above="@+id/bt_2" />

        <TextView
            android:id="@+id/text"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/text_shape"
            android:text="@string/mode_ready"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/bt_2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/bt_restart"
            android:layout_toStartOf="@+id/bt_restart"
            android:background="?attr/colorPrimaryDark"
            android:drawableTint="@color/cardview_light_background"
            android:drawableTop="@drawable/computer"
            android:text="人机对战"
            android:textColor="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/bt_1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/bt_restart"
            android:layout_toEndOf="@+id/bt_restart"
            android:layout_toRightOf="@+id/bt_restart"
            android:background="?attr/colorPrimaryDark"
            android:drawableTint="@color/cardview_light_background"
            android:drawableTop="@drawable/human"
            android:text="人人对战"
            android:textColor="@color/cardview_light_background" />

        <TextView
            android:id="@+id/bt_restart"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignBottom="@+id/bt_2"
            android:layout_alignTop="@+id/bt_2"
            android:layout_centerHorizontal="true"
            android:background="?attr/colorPrimaryDark"
            android:drawableTint="@color/cardview_light_background"
            android:drawableTop="@drawable/restart"
            android:text="重置棋盘"
            android:textColor="@color/cardview_light_background"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="center"
            android:text="五子棋"
            android:textColor="@color/cardview_light_background"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_wzqback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/snake"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/drawer_menu"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>

</FrameLayout>
